{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block navbar %}
    {% include '/_partials/nav.html.twig' %}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-6">
            <h1 class="pt-5 mt-5">Edit User</h1>

            {{ include('user/_form.html.twig', {'button_label': 'Update'}) }}

            <a href="{{ path('app_user_index') }}" class="btn btn-primary">Back to list</a>

            <form action="{{ path('app_user_delete', {'id': user.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this user?');">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="btn btn-danger">Delete</button>
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
            </form>
        </div>
        <div class="col-md-2"></div>
    </div>
{% endblock %}

