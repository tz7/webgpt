{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block navbar %}
    {% include '/_partials/nav.html.twig' %}
{% endblock %}

{% block body %}
    <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-6">
                <h1 class="pt-5 mt-5">User</h1>
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th>Username</th>
                        <td>{{ user.username }}</td>
                    </tr>
                    <tr>
                        <th>Roles</th>
                        <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    </tr>
                    <tr>
                        <th>Password</th>
                        <td>{{ user.password }}</td>
                    </tr>
                    </tbody>
                </table>

                <a href="{{ path('app_user_index') }}" class="btn btn-primary">Back to list</a>
                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning">Edit</a>

                <form action="{{ path('app_user_delete', {'id': user.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this user?');">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                </form>
            </div>
        </div>
{% endblock %}

